
{
    "manifest_version": 3,
    "name": "Eco-Friendly Clothing",
    "description": "A chrome extension which enables users to see if their clothing choice is eco-friendly.",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["activeTab"]
  }